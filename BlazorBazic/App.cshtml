<h1>Hello, blazing world, from @sinergija</h1>

<input type="text" bind="@sinergija" />

<hr />

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" onclick="@IncrementCount">+</button>
<button class="btn btn-primary" onclick="@DecrementCount">-</button>

@functions {

    string sinergija = "Sinergija";

    int currentCount = 0;

    void IncrementCount()
    {
        currentCount += 1;
    }

    void DecrementCount()
    {
        currentCount -= 1;
    }

}