<h1>Hello, blazing world, from @jsTalks</h1>

<input type="text" bind="@jsTalks" />

<hr />

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button onclick="@IncrementCount">+</button>
<button onclick="@DecrementCount">-</button>

@functions {

    string jsTalks = "JsTalks Sofia";

    int currentCount = 0;

    void IncrementCount()
    {
        Console.WriteLine("Incrementing");
        currentCount += 1;
    }

    void DecrementCount()
    {
        Console.WriteLine("Decrementing");
        currentCount -= 1;
    }

}